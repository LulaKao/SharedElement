<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F7F1"
    android:padding="10dp"
    tools:context=".HomeActivity">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/home_profile_image"
        android:transitionName="shared_profile_img"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/example"
        app:civ_border_color="#FFF"
        app:civ_border_width="2dp" />

    <TextView
        android:id="@+id/home_user_name"
        android:transitionName="shared_user_name"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:gravity="center"
        android:layout_marginStart="10dp"
        android:layout_toRightOf="@+id/home_profile_image"
        android:text="Hi, Doris!" />

</RelativeLayout>